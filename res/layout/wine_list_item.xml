<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res/com.jwray.jwraywines"
    android:padding="5dp">

	<com.jwray.jwraywines.classes.WineTextView
	    android:id="@+id/wineName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    app:GlametrixBold="GlametrixBold.otf"
	    android:layout_margin="5dp"
	    android:textColor="@color/BaseColor"
	    android:singleLine="true"
	    android:textSize="18sp"/>
		
	<com.jwray.jwraywines.classes.WineTextView
		    android:id="@+id/wineBrand"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    app:GlametrixLight="GlametrixLight.otf"
		    android:textSize="16sp"
		    android:layout_marginLeft="5dp"
		    android:textColor="@color/White"
		    android:text="" />
	
	<com.jwray.jwraywines.classes.WineTextView
		    android:id="@+id/wineCountry"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    app:GlametrixLight="GlametrixLight.otf"
		    android:textSize="16sp"
		    android:layout_marginLeft="5dp"
		    android:textColor="@color/White"
		    android:text="" />

</LinearLayout>
